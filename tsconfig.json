{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "newLine": "lf",
    "noErrorTruncation": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "stripInternal": true
  },
  "include": [
    "index.ts",
    "bin/**/*.ts",
    "lib/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
